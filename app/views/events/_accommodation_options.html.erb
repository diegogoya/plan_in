<% if @event.tasks.length>0 %>
<% alojamiento = @event.tasks.detect {|t| t.name == "alojamiento"} %>
<% puts alojamiento %>
  <div class="js-accommodation-cards">
    <% alojamiento.choices.each_with_index do |choice, index| %>
      <% @choice=choice %>
      <%= render '/choices/option_card', choice: @choice %>
    <% end %>
  </div>
<% end %>