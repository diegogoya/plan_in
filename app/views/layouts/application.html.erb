<!DOCTYPE html>
<html>
  <head>
    <title>PlanIn</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
  </head>

  <body>
    <% if user_signed_in? %>
      <ul id="dropdown1" class="dropdown-content">
        <li><a href="#!">User</a></li>
        <li><a href="#!">Perfil</a></li>
        <li class="divider"></li>
        <li><a href="#!"></a> <%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="logotitle">PlanIn</a>
          <ul class="right hide-on-med-and-down">
          <li><a href="sass.html">Planes</a></li>
          <li><a href="badges.html">Contactos</a></li>
      <!-- Dropdown Trigger -->
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Perfil<i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
      </div>
    </nav>
    <% end %>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
